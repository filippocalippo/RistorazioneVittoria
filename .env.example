# Pizzeria Configuration
PIZZERIA_SLUG=your_pizzeria_slug

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Google Maps API Configuration
# Required for geocoding addresses
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Geocoding API
# Pricing: 2,500 free requests/day, then $5 per 1,000 requests
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Optional: Firebase (already in google-services.json)
# Firebase Configuration (required for push notifications)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# FIREBASE_ANDROID_APP_ID=1:1234567890:android:abcdef123456
# FIREBASE_ANDROID_API_KEY=your-android-api-key
# FIREBASE_ANDROID_MESSAGING_SENDER_ID=1234567890
# FIREBASE_IOS_APP_ID=1:1234567890:ios:abcdef123456
# FIREBASE_IOS_API_KEY=your-ios-api-key
# FIREBASE_IOS_MESSAGING_SENDER_ID=1234567890
# FIREBASE_IOS_BUNDLE_ID=com.example.rotante
# FIREBASE_MACOS_APP_ID=1:1234567890:macos:abcdef123456
# FIREBASE_MACOS_API_KEY=your-macos-api-key
# FIREBASE_MACOS_MESSAGING_SENDER_ID=1234567890
# FIREBASE_MACOS_BUNDLE_ID=com.example.rotante
# FIREBASE_WEB_APP_ID=1:1234567890:web:abcdef123456
# FIREBASE_WEB_API_KEY=your-web-api-key
# FIREBASE_WEB_MESSAGING_SENDER_ID=1234567890
# FIREBASE_WEB_AUTH_DOMAIN=your-project.firebaseapp.com
# FIREBASE_WEB_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe Configuration
# Required for card payments
# Get your keys from: https://dashboard.stripe.com/test/apikeys
# Use pk_test_ keys for testing, pk_live_ for production
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
